<% phase ||= false %>

<header role="banner" id="global-header" class="with-proposition">
  <div class="header-wrapper govuk-product">
    <div class="header-global">
      <div class="header-logo">
        <a href="index.html" id="logo" class="content">
          <img src="{{ asset_path }}images/gov.uk_logotype_crown_invert_trans.png?0.17.3" width="35" height="31" alt=""> GOV.UK <span class="product-name"><%= product %></span>
          <% if phase %>
          <span class="phase-banner-beta"><strong class="phase-tag"><%= phase %></strong></span>
          <% end %>
        </a>
      </div>
    </div>

    <div class="header-proposition">
      <div class="content">
        <a href="#proposition-links" class="js-header-toggle menu">Menu</a>
        <nav id="proposition-menu">
          <ul id="proposition-links" class="right-aligned">

              <%= partial("includes/primary_nav_#{primary_nav}", :locals => { 
                :section  => section
              }) %>

          </ul>
        </nav>
      </div>
    </div>

  </div>
</header>
<div id="global-header-bar"></div>